         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="192.0" layoutY="498.0" mnemonicParsing="false" onAction="#closeButtonOnAction" prefHeight="27.0" prefWidth="136.0" styleClass="button-style" stylesheets="@styles.css" text="close">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label fx:id="registrationMessageLabel" layoutX="194.0" layoutY="106.0" textFill="#1ce945">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="confirmPasswordLabel" layoutX="211.0" layoutY="389.0" textFill="#e81e1e">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
