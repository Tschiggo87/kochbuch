<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="540.0" prefWidth="520.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kochbuch.controller.RegisterController">
   <children>
      <AnchorPane layoutY="-1.0" prefHeight="100.0" prefWidth="520.0" style="-fx-background-color: #E0D2FD;">
         <children>
            <ImageView fx:id="shieldImageView" fitHeight="62.0" fitWidth="60.0" layoutX="48.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/LoginResources/registerLogo.png" />
               </image>
            </ImageView>
            <Label layoutX="138.0" layoutY="33.0" text="Neuer User" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="79.0" layoutY="131.0" text="Vorname">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="firstnameTextField" layoutX="79.0" layoutY="154.0" prefHeight="25.0" prefWidth="362.0" promptText="Vorname" />
      <Label layoutX="79.0" layoutY="196.0" text="Nachname">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="lastNameTextField" layoutX="79.0" layoutY="219.0" prefHeight="25.0" prefWidth="362.0" promptText="Nachname" />
      <Label layoutX="79.0" layoutY="258.0" text="Benutzername">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="79.0" layoutY="281.0" prefHeight="25.0" prefWidth="362.0" promptText="Benutzername" />
      <Label layoutX="79.0" layoutY="321.0" text="Passwort">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="79.0" layoutY="389.0" text="Passwort bestätigen">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Label>
      <PasswordField fx:id="setPasswordField" layoutX="79.0" layoutY="351.0" prefHeight="25.0" prefWidth="362.0" promptText="Passwort" />
